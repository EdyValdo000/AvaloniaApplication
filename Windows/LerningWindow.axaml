<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="AvaloniaApplication.LerningWindow"
        Title="Aprender Nomes dos Objetos"
        Background="#F0F0F0">

	<DockPanel>
		<!-- Barra de título -->
		<TextBlock DockPanel.Dock="Top" Text="Clique nos objetos para aprender seus nomes!"
                   FontSize="20" HorizontalAlignment="Center" Margin="10" Foreground="#333333" />

		<!-- Área de exibição dos objetos -->
		<ScrollViewer>
			<WrapPanel Name="ItemsWrapPanel" Margin="20" HorizontalAlignment="Center" />
		</ScrollViewer>
	</DockPanel>
</Window>