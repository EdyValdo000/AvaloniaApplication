<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaApplication.TestWindow"
        Title="Teste de Aprendizado">

	<DockPanel>
		<!-- Barra de título -->
		<TextBlock DockPanel.Dock="Top" Text="Teste de Aprendizado"
                   FontSize="20" HorizontalAlignment="Center" Margin="10" />

		<!-- Área de exibição da imagem -->
		<Image Name="TestImage" Width="300" Height="300" Margin="20" HorizontalAlignment="Center" />

		<!-- Botão para reproduzir o áudio -->
		<Button DockPanel.Dock="Bottom" Content="Reproduzir Áudio"
                HorizontalAlignment="Center" Margin="10" Padding="20,10"
                Click="OnPlayAudioClick" />

		<!-- Botão para avançar para a próxima imagem -->
		<Button DockPanel.Dock="Bottom" Content="Próxima Imagem"
                HorizontalAlignment="Center" Margin="10" Padding="20,10"
                Click="OnNextImageClick" />
	</DockPanel>
</Window>